{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    "baseUrl": ".",
    "paths": {
      "@Controllers/*": ["src/Presentation/Controllers/*"],
      "@Routers/*": ["src/Presentation/Routers/*"],
      "@Sockets/*": ["src/Presentation/Sockets/*"],

      "@Repos/*": ["src/Infrastructure/Repositories/*"],
      "@Database/*": ["src/Infrastructure/Database/*"],
      "@Commands/*": ["src/Infrastructure/Commands/*"],
      "@Seeders/*": ["src/Infrastructure/Seeders/*"],

      "@Models/*": ["src/Domain/Models/*"],
    },
  }
}
