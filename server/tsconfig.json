{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    "baseUrl": ".",
    "paths": {
      "@Middlewares/*": ["src/Presentation/Middlewares/*"],
      "@Controllers/*": ["src/Presentation/Controllers/*"],
      
      "@Routers/*": ["src/Presentation/Routers/*"],
      "@Sockets/*": ["src/Presentation/Sockets/*"],

      "@Seeders/*": ["src/Infrastructure/Database/Seeders/*"],
      "@Repos/*": ["src/Infrastructure/Database/Repos/*"],
      "@Specs/*": ["src/Infrastructure/Database/Specs/*"],

      "@Database/*": ["src/Infrastructure/Database/*"],
      "@Commands/*": ["src/Infrastructure/Commands/*"],
      "@Services/*": ["src/Infrastructure/Services/*"],

      "@Models/*": ["src/Domain/Models/*"],
      "@Types/*": ["src/Domain/Types/*"],
    },
  }
}
